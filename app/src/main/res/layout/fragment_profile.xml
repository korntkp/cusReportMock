<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ede4e1"
    tools:context=".Fragment_Profile">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/summary_shape"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical" >

        <TextView
            android:text="@string/profile_header"
            android:textSize="30sp"
            android:layout_marginBottom="10dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:text="@string/name"
            android:textSize="30sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <TextView
            android:text="@string/privilege"
            android:textSize="30sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <TextView
            android:text="@string/create_date"
            android:textSize="30sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <TextView
            android:text="@string/exp_date"
            android:textSize="30sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>


</LinearLayout>
